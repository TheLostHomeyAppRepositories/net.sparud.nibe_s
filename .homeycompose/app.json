      "uiComponent": "sensor",
      "getable": true,
      "setable": false,
      "units": { "en": ""},
      "insights": true,
      "chartType": "spline"
    },
    "measure_frequency": {
      "type": "number",
      "title": { "en": "Measure Frequency" },
      "uiComponent": "sensor",
      "getable": true,
      "setable": false,
