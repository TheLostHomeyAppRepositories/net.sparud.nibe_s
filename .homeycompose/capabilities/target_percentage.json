{
  "type": "number",
  "title": {
    "en": "Dim level",
    "sv": "Fläkthastighet"
  },
  "chartType": "stepLine",
  "min": 0,
  "max": 100,
  "decimals": 0,
  "units": "%",
  "getable": true,
  "setable": true,
  "uiComponent": "slider",
  "$flow": {
    "triggers": [
      {
        "id": "dim_changed",
        "title": {
          "en": "Dim-level changed",
          "sv": "Dimningsnivå ändrades"
        },
        "tokens": [
          {
            "name": "dim",
            "type": "number",
            "title": {
              "en": "Level",
              "sv": "Nivå"
            },
            "example": 0.5
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "dim",
        "highlight": true,
        "title": {
          "en": "Dim to",
          "sv": "Dimma till"
        },
        "args": [
          {
            "name": "dim",
            "type": "range",
            "min": 0,
            "max": 100,
            "step": 0.01,
            "value": 0.5,
            "label": "%",
            "labelMultiplier": 100,
            "labelDecimals": 0
          }
        ]
      },
      {
        "id": "dim_relative",
        "title": {
          "en": "Set relative dim-level",
          "sv": "Sätt relativ dim-nivå"
        },
        "hint": {
          "en": "Dim or brighten with respect to the device's current dim-level.",
          "sv": "Dimma eller höj nivå relativt aktuell inställning."
        },
        "args": [
          {
            "name": "dim",
            "type": "range",
            "min": -1,
            "max": 1,
            "step": 0.01,
            "value": 0.5,
            "label": "%",
            "labelMultiplier": 100,
            "labelDecimals": 0
          }
        ]
      }
    ]
  }
}